<div class="booyah-box col-xs-10 col-xs-offset-1">
  <h2>Sign in</h2>
  <br />
  <%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email, :required => false, :autofocus => true %>
      <%= f.input :password, :required => false %>
    </div>
    <br />
    <div class="form-actions">
      <%= f.button :submit, "Sign in", :class => 'btn btn-primary' %>
    </div>
  <% end %>
  <br />
  <%= render "devise/shared/links" %>
</div>

<div style="clear:both;"></div>
<br />

<div class="col-xs-10 col-xs-offset-1" style="background-color:whitesmoke; padding:20px; border: 1px solid gray;">
  <h3>Admin Sign In</h3>
  <br />
  <p>If you are an admin for your organization, <%= link_to 'sign in here', new_admin_session_path %>.</p>
</div>